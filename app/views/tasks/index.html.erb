<h1>Here are all your tasks</h1>
<table border="1">
  <thead>
    <tr>
      <th>Creation date</th>
      <th>Status</th>
      <th>Name</th>
      <th>Details</th>
      <th>Delete ?</th>
    </tr>
  </thead>
 <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= task.created_at.strftime("%m/%d/%Y") %>
      </td>
      <td style="text-align: center">
        <% var = task.done ? "x" : "" %>
        <%= var %>
      </td>
      <td><%= task.name %></td>
      <td><%=link_to "Show details", task_path(task.id)%></td>
      <td>To do</td>
    </tr>
  <% end %>
</table>
